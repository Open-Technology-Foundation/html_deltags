<script type="text/javascript">
    var minDate = null;
    var maxDate = null;
    var tipeDokumen = null;

    async function fetchData(modal, tipe, startDate, endDate) {

        var url = "https://jdihn.go.id"+"/dokumen-hukum/data/"
                    + tipe
                    + "/uptren"
                    + (
                        startDate
                        ? "?start_date=" + startDate + "&end_date=" + endDate
                        : ""
                    );

        $.ajax({
            url: url,
            type: 'GET',
            dataType: 'json',
            beforeSend: function () {

                // add loading when data is being fetched
                modal.find('#modal-chart-body').html('<div class="loading">Loading...</div>');
                modal.find('#modal-date-picker').addClass('d-none');

            },

            success: function (data) {

                // remove loading
                modal.find('#modal-date-picker').removeClass('d-none');
                modal.find('#modal-chart-body').html('<div id="chart-container"></div>');

                // set minDate to first date of data
                minDate = minDate ?? moment(data[0][0]);
                maxDate = maxDate ?? moment(data[data.length - 1][0]);
                tipeDokumen = tipe;

                Highcharts.chart('chart-container', {
                    chart: {
                        type: 'line',
                        zoomType: 'x'
                    },
                    title: {
                        text: tipe
                    },
                    xAxis: {
                        title: {
                            text: 'Tanggal'
                        },
                        type: 'datetime',
                    },
                    yAxis: {
                        title: {
                            text: 'Jumlah Data'
                        }
                    },
                    series: [{
                        data: data
                    }],
                    legend: {
                        enabled: false
                    },
                });


                $('input[id="input-date"]').daterangepicker({
                    startDate: moment(data[0][0]),
                    endDate: moment(data[data.length - 1][0]),
                    minDate: minDate,
                    maxDate: maxDate,
                    locale: {
                        format: 'DD/MM/YYYY'
                    }
                });
            },

        });
    }

    $(document).ready(function () {
        $('#modal-chart').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var tipe = button.data('tipe');
            var modal = $(this);

            fetchData(modal, tipe, null, null);
        });
    });

    document.getElementById("btn-submit-date").addEventListener("click", function () {
        var startDate = $('#input-date').data('daterangepicker').startDate;
        var endDate = $('#input-date').data('daterangepicker').endDate;
        var modal = $('#modal-chart');

        console.log(startDate);

        fetchData(modal, tipeDokumen, startDate, endDate);
    });

</script>
    
    <script type="text/javascript">
    	$(document).ready(function(){
    		            
			var captcha = sliderCaptcha({
			  	id: 'slidecaptcha',
			  	width: 300,
		        height: 150,
		        sliderL: 42,
		        sliderR: 9,
		        offset: 5,
				loadingText: 'Memuat...',
				failedText: 'Coba Lagi',
				barText: 'Geser ke kanan',
				repeatIcon: 'fa fa-refresh',
				onSuccess: function () {
					// console.log(captcha.verify().verified)
				},
				setSrc: function () {
				   	return 'https://jdihn.go.id/assetsv3/plugins/slidecaptcha/src/images/Pic' + Math.round(Math.random() * 4) + '.jpg';
				},
			});

			$("#login #login-form").submit( function(eventObj) {
			      $("<input />").attr("type", "hidden")
			          .attr("name", "slider-response")
			          .attr("value", captcha.verify().verified)
			          .appendTo("#login #login-form");
			      return true;
			  });

			var captcha_register = sliderCaptcha({
			  	id: 'slidecaptcha-register',
			  	width: 300,
		        height: 150,
		        sliderL: 42,
		        sliderR: 9,
		        offset: 5,
				loadingText: 'Loading...',
				failedText: 'Coba Lagi',
				barText: 'Geser ke kanan untuk mengisi',
				repeatIcon: 'fa fa-refresh',
				onSuccess: function () {
					// console.log(captcha.verify().verified)
				},
				setSrc: function () {
				   	return 'https://jdihn.go.id/assetsv3/plugins/slidecaptcha/src/images/Pic' + Math.round(Math.random() * 4) + '.jpg';
				},
			});

			$("#signup #register-form").submit( function(eventObj) {
			      $("<input />").attr("type", "hidden")
			          .attr("name", "slider-response")
			          .attr("value", captcha_register.verify().verified)
			          .appendTo("#signup #register-form");
