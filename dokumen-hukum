  $(document).ready(function() {
    var fixmeTop = $('.right-sidebar').offset().top;
    var link = $('.footer');
    // console.log($(window).height() - fixmeTop - link.height())
    // console.log(fixmeTop)
    // var bottom =       // get initial position of the element

    $(window).scroll(function() {                  // assign scroll event listener

        var currentScroll = $(window).scrollTop();
        // console.log(currentScroll) // get current position

        if (currentScroll >= fixmeTop && currentScroll < 5100) {           // apply position: fixed if you
            $('.right-sidebar').css({                      // scroll to that element or below it
                position: 'fixed',
                top: '14vh'
            });
        // } else if (currentScroll >= 4600) {
             // $('.right-sidebar').css({                      // if you scroll above it
                // position: 'static',
                // top : '5vh'
            // });
        } else {                                   // apply position: static
            $('.right-sidebar').css({                      // if you scroll above it
                position: 'static'
            });
        }

    });


